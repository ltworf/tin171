#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_build:
	make all

override_dh_auto_install:
	make DESTDIR=debian/chinese-checkers-client install_gui
	make DESTDIR=debian/chinese-checkers-client install_server
	
	python setup.py install --root=debian/chinese-checkers-client --install-layout=deb --install-lib=/usr/share/chinese-checkers-client --install-scripts=/usr/games
	chmod a+x debian/chinese-checkers-client/usr/share/chinese-checkers-client/chinese-checkers/chinese-checkers-gui.py
	chmod a+x debian/chinese-checkers-client/usr/share/chinese-checkers-client/chinese-checkers/bot/bot.py

